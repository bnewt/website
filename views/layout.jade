doctype html
html(ng-app='bolte-construction')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='description' content='Website for Bolte Construction - Omaha, NE')
    meta(name='author' content='Brian Newton')
    title= 'Bolte Construction'
    link(rel='stylesheet' href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet' href='/stylesheets/carousel.css')
  body
    .navbar-wrapper
        .container
            .navbar.navbar-inverse.navbar-static-top(role='navigation')
                .container
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button' ng-init='model.isCollapsed=true' ng-click='model.isCollapsed = !model.isCollapsed')
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='#/Home') Bolte Construction
                    .navbar-collapse.collapse(collapse='model.isCollapsed')
                        ul.nav.navbar-nav
                            li: a(href='#/home') Home
                            li: a(href='#/kitchen') Kitchen
                            li: a(href='#/bathroom') Bathroom
                            li: a(href='#/lower-level') Lower Level
                            li: a(href='#/exterior') Exterior
                            li: a(href='#/commercial') Commercial
                            li: a(href='#/testimonials') Testimonials
                            li: a(href='#/contact') Contact
                            li: a(href='#/about') About
    .container(align='center' style='margin-top:100px;')
        h1(style='display: inline; margin-right: 10px') Bolte Construction
        h2(style='display: inline;'): em Design to Finish

        block content

        footer
            p!= 'Bolte Construction &bull; Omaha Nebraska &bull; 402-706-0660 &bull; Email &bull; &copy; Bolte Construction 2014'
    script(type='text/javascript' src='javascripts/angular.min.js')
    script(type='text/javascript' src='javascripts/angular-route.min.js')
    script(type='text/javascript' src='javascripts/angular-animate.min.js')
    script(type='text/javascript' src='javascripts/ui-bootstrap-tpls-0.10.0.min.js')
    script(type='text/javascript' src='javascripts/app.js')
    script(type='text/javascript' src='javascripts/controllers.js')
